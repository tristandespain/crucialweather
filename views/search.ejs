<dmx-preloader id="preloader1" color="#006CE7" spinner="wave"></dmx-preloader>
<dmx-serverconnect id="currentweatherdata" url="/api/NWSCurrentSearch" dmx-param:lat="geo1.coords.latitude" dmx-param:long="geo1.coords.longitude" dmx-param:latlong="session1.data.location" dmx-on:success="session1.set('lat',currentweatherdata.data.api.data.geometry.coordinates[1]);session1.set('long',currentweatherdata.data.api.data.geometry.coordinates[0])"></dmx-serverconnect><!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="home" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxFormatter:{},dmxPreloader:{},dmxBootstrap5Collapse:{}}" -->


<div class="container" dmx-show="currentweatherdata.data.alerts.data.features[0].properties.event">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-danger text-center" id="card1_heading">
                    <h5 class="mb-0 text-center">
                        <button id="card1_collapse_Btn" class="btn btn-link text-light" type="button" data-bs-toggle="collapse" data-bs-target="#card1_collapse" aria-expanded="true" aria-controls="collapse">
                            {{currentweatherdata.data.alerts.data.features[0].properties.event}}
                        </button>
                    </h5>
                </div>
                <div id="card1_collapse" class="collapse" is="dmx-bs5-collapse" aria-labelledby="card1_heading" data-bs-parent="">
                    <div class="card-body">
                        {{currentweatherdata.data.alerts.data.features[0].properties.headline+'. '+currentweatherdata.data.alerts.data.features[0].properties.description}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-2">
    <div class="row">
        <div class="col">
            <div class="card placeholder-glow border border-2 border-primary">
                <div class="card-header style4 text-center placeholder-glow text-light bg-primary">{{currentweatherdata.data.api1.data.properties.periods[0].name+' in '+currentweatherdata.data.api.data.properties.relativeLocation.properties.city+', '+currentweatherdata.data.api.data.properties.relativeLocation.properties.state}}</div>
                <div class="card-body">
                    <h3 class="text-center placeholder-glow">{{currentweatherdata.data.api1.data.properties.periods[0].shortForecast}}</h3>
                    <div class="d-flex justify-content-center mb-2 placeholder-glow"><img dmx-bind:src="currentweatherdata.data.api1.data.properties.periods[0].icon" class="img-fluid rounded"></div>
                    <div class="d-flex flex-row justify-content-around mb-2 placeholder-glow">
                        <h5 class="card-text">&nbsp;🌡️{{currentweatherdata.data.api1.data.properties.periods[0].temperature+'°'+currentweatherdata.data.api1.data.properties.periods[0].temperatureUnit}}</h5>
                        <h5 class="card-text">&nbsp;💨{{currentweatherdata.data.api1.data.properties.periods[0].windDirection+' @ '+currentweatherdata.data.api1.data.properties.periods[0].windSpeed}}</h5>


                    </div>
                    <div class="d-flex justify-content-center mb-2 placeholder-glow">
                        <h5 class="card-text">{{currentweatherdata.data.api1.data.properties.periods[0].detailedForecast}} </h5>
                    </div>
                    <div class="d-flex justify-content-center mb-2 placeholder-glow">

                    </div>







                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-2 mb-3">
    <div class="row">
        <div class="col">
            <div class="card border border-2 border-primary">
                <div class="card-header style4 text-center text-light bg-primary">{{currentweatherdata.data.api1.data.properties.periods[1].name+' in '+currentweatherdata.data.api.data.properties.relativeLocation.properties.city+', '+currentweatherdata.data.api.data.properties.relativeLocation.properties.state}}</div>
                <div class="card-body">

                    <h3 class="text-center">{{currentweatherdata.data.api1.data.properties.periods[1].shortForecast}}</h3>
                    <div class="d-flex justify-content-center mb-2"><img dmx-bind:src="currentweatherdata.data.api1.data.properties.periods[2].icon" class="img-fluid rounded"></div>
                    <div class="d-flex flex-row justify-content-around mb-2">
                        <h5 class="card-text">&nbsp;🌡️{{currentweatherdata.data.api1.data.properties.periods[1].temperature+'°'+currentweatherdata.data.api1.data.properties.periods[1].temperatureUnit}}</h5>
                        <h5 class="card-text">&nbsp;💨{{currentweatherdata.data.api1.data.properties.periods[1].windDirection+' @ '+currentweatherdata.data.api1.data.properties.periods[1].windSpeed}}</h5>


                    </div>
                    <div class="d-flex justify-content-center mb-2">
                        <h5 class="card-text">{{currentweatherdata.data.api1.data.properties.periods[1].detailedForecast}} </h5>
                    </div>








                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Current Observations</h1>
        </div>
    </div>
</div>
<div class="container text-center">
    <div class="row text-center">
        <div class="col text-center">
            <img class="img-fluid" dmx-bind:src="'https://radar.weather.gov/ridge/lite/'+currentweatherdata.data.api.data.properties.radarStation+'_loop.gif'">
        </div>
    </div>
</div>
<div class="container mt-5 mb-5 text-center">
    <div class="row">
        <div class="col"><button id="btn1" class="btn btn-lg btn-primary" dmx-on:click="session1.set('locationname',content.currentweatherdata.data.api.data.properties.relativeLocation.properties.city+', '+content.currentweatherdata.data.api.data.properties.relativeLocation.properties.state);session1.set('office',content.currentweatherdata.data.api.data.properties.gridId);session1.set('gridx',content.currentweatherdata.data.api.data.properties.gridX);session1.set('gridy',content.currentweatherdata.data.api.data.properties.gridY);browser1.goto('/forecast')">View Forecast</button></div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <h1>Next 12 Hours</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="currentweatherdata.data.api2.data.properties.periods.top(12)" id="tableRepeat2">
                        <tr>
                            <td dmx-text="'🕑'+ startTime.formatDate('h:mm a')"></td>
                            <td dmx-text="'🌡️'+ temperature+'°'"></td>
                            <td dmx-text="' 💨'+ windSpeed"></td>
                            <td>
                                <a><img dmx-bind:src="icon" class="img-fluid"></a>
                            </td>
                            <td dmx-text="shortForecast"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<meta name="ac:route" content="/search">


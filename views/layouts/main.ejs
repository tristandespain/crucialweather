<body is="dmx-app" id="main">
    <div is="dmx-browser" id="browser1"></div>
    <dmx-session-manager id="session1"></dmx-session-manager>
    <dmx-geolocation id="geo1"></dmx-geolocation>
    <header class="bg-primary">
        <div class="container">
            <div class="row align-items-center">
                <div class="bs-component">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <div class="container-fluid">
                            <img src="/assets/images/Crucial Weather-logos_white.png" height="30px">
                            <button class="navbar-toggler" type="button" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" data-bs-toggle="collapse" data-bs-target="#navbarColor01">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse text-center justify-content-center" id="navbarColor01">


                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" href="/home">Home</a>
                                    <a class="nav-item nav-link" href="#">Radar</a>

                                    <div class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-center" data-bs-toggle="dropdown" href="#" id="dropdown1" role="button" aria-haspopup="true" aria-expanded="false">SPC Outlooks</a>
                                        <div class="dropdown-menu" aria-labelledby="dropdown1">
                                            <a class="dropdown-item" href="#">Current Weather Watches</a>
                                            <a class="dropdown-item" href="#">Mesoscale Discussions</a>
                                            <a class="dropdown-item" href="#">Convective Outlooks</a>
                                            <a class="dropdown-item" href="#">Fire Weather Outlooks</a>
                                            <a class="dropdown-item" href="#">Watches, Warnings, and Advisories</a>
                                        </div>
                                    </div>
                                    <a class="nav-item nav-link" href="#">Education</a>
                                    <a class="nav-item nav-link" href="#">Contact</a>
                                </div>


                                <form class="d-flex my-2 my-lg-0" method="post" action="/api/Current">

                                    <input class="form-control me-sm-2" placeholder="Enter City or Zip" id="locationsearch" name="locationsearch" dmx-on:keydown.enter="btn1.focus()">
                                    <button id="btn1" class="btn btn-secondary shadow-none" dmx-on:click="session1.set('location',locationsearch.value);browser1.goto('/search')">Search</button>
                                </form>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        </div>
    </header>

    <div is="dmx-view" id="content">
        <%- await include(content, locals); %>
    </div>
    <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>
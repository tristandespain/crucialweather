<!doctype html>
<html>

<head>
    <base href="/">
    <script src="/dmxAppConnect/dmxAppConnect.js"></script>
    <meta charset="UTF-8">
    <title>Crucial Weather</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="/dmxAppConnect/dmxRouting/dmxRouting.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/bootstrap/5/darkly/bootstrap.min.css" />
    <script src="/dmxAppConnect/dmxGeolocation/dmxGeolocation.js" defer=""></script>
    <script src="/dmxAppConnect/dmxFormatter/dmxFormatter.js" defer=""></script>
    <script src="/dmxAppConnect/dmxBootstrap5Navigation/dmxBootstrap5Navigation.js" defer=""></script>
    <script src="/dmxAppConnect/dmxCharts/Chart.min.js" defer=""></script>
    <script src="/dmxAppConnect/dmxCharts/dmxCharts.js" defer=""></script>
    <script src="/dmxAppConnect/dmxStateManagement/dmxStateManagement.js" defer=""></script>
    <script src="/dmxAppConnect/dmxBrowser/dmxBrowser.js"></script>
    <link rel="stylesheet" href="/dmxAppConnect/dmxBootstrap5TableGenerator/dmxBootstrap5TableGenerator.css" />
    <script src="/dmxAppConnect/dmxBootstrap5PagingGenerator/dmxBootstrap5PagingGenerator.js" defer=""></script>
    <script src="/dmxAppConnect/dmxSwiper/dmxSwiper.js" defer=""></script>
    <script src="/dmxAppConnect/dmxSwiper/swiper.min.js" defer=""></script>
    <link rel="stylesheet" href="/dmxAppConnect/dmxSwiper/themes/default.css" />
    <script src="/dmxAppConnect/dmxMoment/dmxMoment.js"></script>
</head>

<body is="dmx-app" id="main">
    <div is="dmx-browser" id="browser1"></div>
    <dmx-session-manager id="session1"></dmx-session-manager>
    <dmx-geolocation id="geo1"></dmx-geolocation>
    <header class="bg-primary">
        <div class="container">
            <div class="row align-items-center">
                <div class="bs-component">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <div class="container-fluid">
                            <img src="/assets/images/Crucial Weather-logos_white.png" height="30px">
                            <button class="navbar-toggler" type="button" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" data-bs-toggle="collapse" data-bs-target="#navbarColor01">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarColor01">
                                <ul class="navbar-nav me-auto">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">Home <span class="visually-hidden">(current)</span></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Features</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Pricing</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">About</a>
                                    </li>
                                </ul>
                                <form class="d-flex my-2 my-lg-0" method="post" action="/api/Current">

                                    <input class="form-control me-sm-2" placeholder="Enter City or Zip" id="locationsearch" name="locationsearch" dmx-on:keydown.enter="btn1.focus()">
                                    <button id="btn1" class="btn btn-secondary" dmx-on:click="session1.set('location',locationsearch.value);browser1.goto('/search')">Search</button>
                                </form>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        </div>
    </header>

    <div is="dmx-view" id="content">
        <%- await include(content, locals); %>
    </div>
    <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>
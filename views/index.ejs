<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="darkly" is="dmx-app" id="index" appConnect="local" components="{dmxGeolocation:{},dmxFormatter:{}}" -->
<dmx-serverconnect id="Current_Weather" url="/api/Current" dmx-param:latlong="geo1.coords.latitude+','+geo1.coords.longitude"></dmx-serverconnect>
<section class="pt-4">
    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col col-md-8">
                <h1 class="text-primary">Current Weather For {{Current_Weather.data.api.data.location.name}}, {{Current_Weather.data.api.data.location.region}}</h1>
                <p class="text-h3 text-muted style1">Last Updated: {{Current_Weather.data.api.data.current.last_updated}}</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card bg-primary rounded rounded-2 border-secondary">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <img class="col-2" dmx-bind:src="Current_Weather.data.api.data.current.condition.icon" width="50px">
                            <h1 class="col-10">{{Current_Weather.data.api.data.current.temp_f+'Â° - '+Current_Weather.data.api.data.current.condition.text}}</h1>
                            <h4><i class="fas fa-temperature-high"></i>&nbsp;Feels Like {{Current_Weather.data.api.data.current.feelslike_f+'Â°'}}</h4>
                        </div>
                        <h4 class="card-text"><i class="fas fa-wind"></i>&nbsp;{{Current_Weather.data.api.data.current.wind_mph+'mph'}}</h4>
                        <h4 class="card-text"><i class="fas fa-water"></i>&nbsp;{{Current_Weather.data.api.data.current.humidity+'%'}}</h4>
                        <h4 class="card-text"><i class="fas fa-eye"></i>&nbsp;{{Current_Weather.data.api.data.current.vis_miles+' miles'}}</h4>
                        <h4 class="card-text"><i class="fas fa-cloud-showers-heavy"></i>&nbsp;{{Current_Weather.data.api.data.current.precip_in+' in.'}}</h4>
                        <div class="d-flex justify-content-center"><a href="#" class="btn btn-primary shadow bg-secondary">See Forecast</a></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<meta name="ac:route" content="/">
